          c.For(x => "").IsRowNumberColumn(true).Align(Alignment.Center).Width(40).Queryable(false);
          c.For(x => Html.SiLink(x.Code, "javascript:;", null), "Code");
          c.For(x => x.Name).Width(200);
 }).AutoScroll(true)

@Html.Pager(Model)  
