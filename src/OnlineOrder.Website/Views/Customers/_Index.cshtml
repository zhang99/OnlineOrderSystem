
@using OnlineOrder.Mvc
@using OnlineOrder.Mvc.Grid
@using OnlineOrder.Mvc.Pagination
@using OnlineOrder.Website.Models
@model IPagination<Customer>

@Html.Grid(Model).Sort(ViewBag.Sort as GridSortOptions).Columns(c =>
{
    c.For(x => Html.CheckBox("vendors", new { value = x.Id.ToString() }), "Id").Header(x => Html.CheckBox("vendors")).Sortable(false).Align(Alignment.Center).Width(30).Queryable(false);
    c.For(x => "").IsRowNumberColumn(true).Align(Alignment.Center).Width(40).Queryable(false);
    c.For(x => Html.ActionLink(x.Code, "Edit", new { id = x.Id }), "Code").Named("编码");
    c.For(x => x.Name).Named("名称").Width(200);
    c.For(x => x.Discount).Width(200);
    c.For(x => x.Memo).Width(400);
}).AutoScroll(true)

@Html.Pager(Model)  
